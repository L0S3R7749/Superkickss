<div class="bg-light py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-0">
        <a href="/">Home</a>
        <span class="mx-2 mb-0">/</span>
        <strong class="text-black"><%=product.name%></strong>
      </div>
    </div>
  </div>
</div>

<div class="site-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100 img-fluid" src="<%= product.images[0].url%>" alt="First image">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100 img-fluid" src="<%= product.images[0].url%>" alt="Second image">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100 img-fluid" src="<%= product.images[0].url%>" alt="Third image">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="col-md-6">
        <h2 class="text-black" id="product-name"><%=product.name%></h2>
        <p class="mb-4"><%= product.description%></p>
        <p><strong class="text-primary h4">$<%=product.price%></strong></p>
        <div class="mb-1 d-flex mb-4">
          <form>
            <h5>Size</h5>
            <select class="form-control form-select" id="product-size">
              <% for (let i = 0; i < product.details.length; i++) { %>
              <option value="<%= product.details[i].size%>"><%= product.details[i].size%></option>
              <% } %>
            </select>
          </form>
        </div>
        <div class="mb-4">
          <h5>Amount</h5>
          <div class="input-group" style="max-width: 120px;">
            <div class="input-group-prepend">
              <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
            </div>
            <input type="text" id="product-quantity" class="form-control text-center" value="1" placeholder=""
              aria-label="Example text with button addon" aria-describedby="button-addon1">
            <div class="input-group-append">
              <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
            </div>
          </div>

        </div>
        <% if(locals.user) { %>
          <button type="button" class="buy-now btn btn-sm btn-primary" data-toggle="modal" data-target="#addToCartModal">
            Add To Cart
          </button>
        <% } else { %>
          <button type="button" class="buy-now btn btn-sm btn-primary" data-toggle="modal" data-target="#loginModal">
            Add To Cart
          </button>
        <% } %>
      </div>
    </div>
  </div>
</div>

<div class="site-section">
  <div class="container product-comment">
      <div class="row mb-4">
        <div class="col-md-4">
          <% if(locals.user) { %>
            <div class="comment__user mb-4">
              <div class="comment__user-avatar"></div>
              <div class="comment__user-name">
                <h5><%=locals.user.fullname%></h5>
              </div>
            </div>
            <% } %>
        </div>
        <div class="col-md-8">
          <form method="post">
            <input type="hidden" name="productId" value="<%= product._id%>">

            <% if(locals.user) { %>
              <div class="form-group">
                <div class="starrating risingstar d-flex flex-row-reverse float-left">
                  <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="5 star"></label>
                  <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="4 star"></label>
                  <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="3 star"></label>
                  <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="2 star"></label>
                  <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="1 star"></label>
                </div>
                <input type="hidden" name="fullname" value="<%= locals.user.fullname%>">
                <input type="hidden" name="userId" value="<%= locals.user._id%>">
                <textarea class="form-control" name="content" id="commentContent" rows="3"></textarea>
              </div>
              <button type="submit" id="post-rating" class="btn btn-outline-primary float-right">Bình luận</button>
            <% } %>
          </form>
        </div>
      </div>
    <div class="row mb-4" id="ratings">

    </div>
    <ul class="pagination d-flex justify-content-center">

    </ul>
  </div>
</div>

