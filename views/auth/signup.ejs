<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/login-style/fonts/icomoon/style.css">
    <link rel="stylesheet" href="/login-style/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/login-style/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="/login-style/css/style.css">

    <title>login</title>
  </head>
  <body>
  

    <div class="auth-background">
      <div class="container">
        <div class="row p-5 sign-up">
          <div class="col-lg-6 left-content">
            <div class="context text-center">
              <h3 class="fw-bold">Already have an account?</h3>
              <h6>Login now</h6>
              <a class="content-button mt-3" href="/auth/login">Login now</a>
            </div>
          </div>
  
          <div class="col-lg-6 right-content">
            <h3 class="mb-3">Sign up</h3>
            <form class="login-form" method="post">
              <% if (message) { %>
                <div class="col=md-12 mb-3">
                  <div class="error">
                    <i class="fas fa-times-circle me-2"></i>
                    <span><%= message%></span>
                  </div>
                </div>
              <% } %>
              <div class="col-md-12 mb-3">
                <input class="form-control" type="text" name="fullname" placeholder="Fullname" />
              </div>
              <div class="col-md-12 mb-3">
                <input class="form-control" type="text" name="username" placeholder="Username" />
              </div>
              <div class="col-md-12 mb-3">
                <input class="form-control" type="password" name="password" placeholder="Password" />
              </div>
              <div class="col-md-12 mb-3">
                <input class="form-control" type="password" name="confirmPassword" placeholder="Confirm password"/>
              </div>
              <div class="col-md-12 mb-3">
                <input class="form-control" type="email" name="email" placeholder="Email"/>
              </div>
              <div class="col-md-12 mb-3">
                <input class="form-control" type="text" name="phone" placeholder="Phone"/>
              </div>
              <div class="col-md-12 mb-3 ml-4">
                <label class="form-check-label" htmlFor="keep-logged">
                  <input class="form-check-input " type="checkbox" id="keep-logged" />
                  Keep me logged in
                </label>
              </div>
              <div class="col-md-12 mb-3 text-center d-flex flex-column">
                <input class="form-control mb-2 form-button" type="submit" value="Sign up" />
                <a href="/">Forgot Password?</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    
    

    <script src="/login-style/js/jquery-3.3.1.min.js"></script>
    <script src="/login-style/js/popper.min.js"></script>
    <script src="/login-style/js/bootstrap.min.js"></script>
    <script src="/login-style/js/main.js"></script>
  </body>
</html>