<div class="forgot-password-background">
    <div class="container mb-5 mt-5 forgot-password">
        <div class="d-flex align-items-center flex-column mb-5">
            <h4 class="mt-5">Superkickss</h4>
            <h2 class="text-center">Set your new password</h2>
            <form class="col-sm-10 col-md-8 col-lg-6 col-xl-5" id="submit-password" method="post">
                <div class="mt-3 mb-4">
                    <input type="password" name="password" class="form-control" placeholder="Enter your new password">
                </div>
                <div class="mb-4">
                    <input type="password" name="confirmPassword" class="form-control"
                        placeholder="Confirm your password">
                </div>
                <%if (message.length>0) {%>
                <div class="col-md-12 mb-3 error">
                    <div class="error">
                        <i class="fas fa-times-circle me-2"></i>
                        <span><%= message%></span>
                    </div>
                </div>
                <% } %>
                <div class="d-flex align-items-center mb-4">
                    <button type="submit" id="submit-reset-password" class="form-control btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>