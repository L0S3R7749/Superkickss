<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/login-style/fonts/icomoon/style.css">
  <link rel="stylesheet" href="/login-style/css/owl.carousel.min.css">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/login-style/css/bootstrap.min.css">

  <!-- Style -->
  <link rel="stylesheet" href="/login-style/css/style.css">

  <title>Login</title>
</head>

<body>
  <div class="auth-background">
    <div class="login container mt-5 mb-5 shadow">
      <div class="row py-5">
          <div class="col-lg-6 blue">
              <div class="side-box">
                  <div class="context text-center">
                      <h3 class="pb-3 fw-bold">New to our website?</h3>
                      <p class="pb-4">Join us now</p>
                      <a href="/auth/signup">Create an Account</a>
                  </div>
              </div>
          </div>
          <div class="col-lg-6 white">
              <div class="login-box my-5 py-2">
                  <h3 class="text-uppercase text-center mb-5 fw-bold">Log In To Our Website</h3>
                  <form method="post" class="row login-form mx-auto">
                    <% if (message.length > 0) { %>
                      <div class="col-md-12 mb-3">
                        <div class="error">
                          <i class="fas fa-times-circle me-2"></i>
                          <span><%= message%></span>
                        </div>
                      </div>
                    <% } %>
                      <div class="col-md-12 mb-3">
                          <input class="form-control" type="text" name="username" placeholder="Username" />
                      </div>
                      <div class="col-md-12 mb-3">
                          <input class="form-control" type="password" name="password" placeholder="Password" />
                      </div>
                      <div class="col-md-12 ml-4 mb-3">
                        <input class="form-check-input" type="checkbox" id="keep-logged">
                        <label class="form-check-label" htmlFor="keep-logged">Keep me logged in</label>
                      </div>
                      <div class="col-md-12 mb-3 text-center login-button">
                          <button class="form-control mb-2" type="submit">Log In</button>
                          <a href="/auth/forgot-password">Forgot Password?</a>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
  </div>


  <script src="/login-style/js/jquery-3.3.1.min.js"></script>
  <script src="/login-style/js/popper.min.js"></script>
  <script src="/login-style/js/bootstrap.min.js"></script>
  <script src="/login-style/js/main.js"></script>
</body>

</html>